{
  "name": "@proofgate/eliza-plugin",
  "version": "0.1.2",
  "description": "ProofGate plugin for elizaOS â€” validate AI agent transactions against security guardrails before execution",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "images"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "eliza",
    "elizaos",
    "ai16z",
    "ai-agent",
    "blockchain",
    "validation",
    "security",
    "guardrails",
    "proofgate",
    "defi",
    "web3",
    "crypto"
  ],
  "author": "0xCR6 <cristian@proofgate.xyz>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ProofGate/proofgate-eliza-plugin.git"
  },
  "homepage": "https://proofgate.xyz",
  "bugs": {
    "url": "https://github.com/ProofGate/proofgate-eliza-plugin/issues"
  },
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "PROOFGATE_API_KEY": {
        "type": "string",
        "description": "ProofGate API key for authenticated validations (get from proofgate.xyz)"
      },
      "PROOFGATE_GUARDRAIL_ID": {
        "type": "string",
        "description": "Default guardrail ID for transaction validation"
      },
      "PROOFGATE_AUTO_BLOCK": {
        "type": "boolean",
        "description": "Automatically block unsafe transactions (default: true)"
      }
    }
  },
  "peerDependencies": {
    "@elizaos/core": "^1.0.0"
  },
  "dependencies": {
    "viem": "^2.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.19.31",
    "typescript": "^5.9.3"
  }
}
